{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "jsx": "react-jsx",
        "declaration": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "noEmit": false,
        "types": [
            "node",
            "react"
        ]
    },
    "include": [
        "src"
    ]
}